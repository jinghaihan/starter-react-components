{
  "name": "lib-name",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.25.0",
  "description": "Starter template for React Components.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/lib-name#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/lib-name.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/lib-name/issues"
  },
  "keywords": [],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsdown",
    "deps": "taze major -I",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "release": "bumpp",
    "bootstrap": "pnpm install",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@tailwindcss/postcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@eslint-react/eslint-plugin": "catalog:lint",
    "@tailwindcss/postcss": "catalog:style",
    "@types/node": "catalog:types",
    "@types/react": "catalog:types",
    "@types/react-dom": "catalog:types",
    "@vitejs/plugin-react": "catalog:build",
    "bumpp": "catalog:cli",
    "eslint": "catalog:lint",
    "eslint-plugin-format": "catalog:",
    "eslint-plugin-react-hooks": "catalog:lint",
    "eslint-plugin-react-refresh": "catalog:lint",
    "happy-dom": "catalog:dev",
    "lint-staged": "catalog:lint",
    "pncat": "catalog:cli",
    "react": "catalog:frontend",
    "react-dom": "catalog:frontend",
    "simple-git-hooks": "catalog:lint",
    "tailwindcss": "catalog:style",
    "taze": "catalog:cli",
    "tsdown": "catalog:build",
    "tsx": "catalog:script",
    "typescript": "catalog:tsc",
    "unplugin-icons": "catalog:build",
    "unplugin-lightningcss": "catalog:build",
    "vite": "catalog:build",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
